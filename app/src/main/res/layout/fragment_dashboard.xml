<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@color/colorOffWhite"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textSize="14sp"
                android:textColor="#6991fd"
                android:fontFamily="sans-serif"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ 685.20"
                android:id="@+id/txt_balance"
                android:textSize="26sp"
                android:textColor="#6991fd"
                android:fontFamily="sans-serif"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:background="#6991fd"
            android:onClick="updateBank"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank"
                android:textSize="14sp"
                android:textColor="@color/colorOffWhite"
                android:fontFamily="sans-serif"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ 485.20"
                android:id="@+id/txt_bank_balance"
                android:textSize="26sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="sans-serif"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:background="#fb7064"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Hand"
                android:textSize="14sp"
                android:textColor="@color/colorOffWhite"
                android:fontFamily="sans-serif"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ 200"
                android:textSize="26sp"
                android:id="@+id/txt_cash_in_hand"
                android:textColor="@color/colorWhite"
                android:fontFamily="sans-serif"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:background="#ffab33"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcomming Alarm"
                android:textSize="14sp"
                android:textColor="@color/colorOffWhite"
                android:fontFamily="sans-serif"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 'o Clock"
                android:textSize="26sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="sans-serif"

                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>