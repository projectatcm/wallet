<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codemagos.wallet.BankUpdateAcivity">
<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="160dp">
    <ImageView
        android:id="@+id/image_logo"
        android:scaleType="centerCrop"
        android:alpha="9"
        android:src="@drawable/federal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
   <LinearLayout
       android:padding="16dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <TextView
           android:layout_width="wrap_content"
           android:text="Select Your Bank"
           android:textStyle="bold"
           android:layout_height="wrap_content" />

       <RadioGroup
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:id="@+id/radio_banks"
           android:layout_height="wrap_content">
           <RadioButton
               android:id="@+id/radio_federal"
               android:tag="federal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:checked="true"
               android:text="Federal Bank" />
           <RadioButton
               android:tag="axis"
               android:id="@+id/radio_axis"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="Axis Bank" />
           <RadioButton
               android:id="@+id/radio_sib"
               android:tag="sib"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="South Indian Bank" />
       </RadioGroup>
       <Button
           android:text="Update"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/colorPrimary"
           android:textColor="@color/colorOffWhite"
           android:layout_marginTop="10dp"
           android:id="@+id/btn_update"
           />
   </LinearLayout>

</LinearLayout>
